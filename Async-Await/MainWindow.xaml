<Window x:Class="Async_Await.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Async_Await"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Height="35" Margin="10,10,0,0" TextWrapping="Wrap" Text="Async/Await Demo" VerticalAlignment="Top" Width="772" FontSize="24"/>
        <Button x:Name="executeSync" Content="Normal (synchronous) execution" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top" Width="772" Height="40" Click="executeSync_Click"/>
        <TextBlock x:Name="resultWindow" HorizontalAlignment="Left" Margin="10,140,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="269" Width="772"/>
        <Button x:Name="executeAsync" Content="Asynchronous execution" HorizontalAlignment="Left" Margin="10,95,0,0" VerticalAlignment="Top" Width="772" Height="40" Click="executeAsync_Click"/>
        
    </Grid>
</Window>
